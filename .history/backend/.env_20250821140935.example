# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///portfolio.db

# Email Service Configuration (for contact form)
EMAIL_SERVICE=smtp  # Options: smtp, sendgrid, mailgun, console (for development)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
TO_EMAIL=your-personal-email@gmail.com

# Optional: SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key

# Optional: Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# Deployment Configuration
PRODUCTION_DATABASE_URL=postgresql://username:password@localhost/portfolio_prod

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-id
